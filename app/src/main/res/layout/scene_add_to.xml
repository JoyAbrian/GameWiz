<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#B9FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/close_scene"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vector_close"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="casual"
                android:text="Game_title"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <!--    LIBRARY SECTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/library_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/vector_library"
                        android:background="@drawable/button_background"
                        app:tint="@color/white"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="My Library"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    WISHLIST SECTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/wishlist_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/vector_wishlist"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#BFBFBF"
                        app:tint="#FF0000"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Wishlist"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    NOW PLAYING SECTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/playing_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/vector_play"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#673AB7"
                        app:tint="#FFFFFF"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Playing"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    PAUSE SECTION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pause_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/vector_pause"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#FF0000"
                        app:tint="#FFFFFF"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Pause / Quit"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/completed_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_marginBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/vector_completed"
                        android:background="@drawable/button_background"
                        android:backgroundTint="#4CAF50"
                        app:tint="#FFFFFF"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Completed"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
